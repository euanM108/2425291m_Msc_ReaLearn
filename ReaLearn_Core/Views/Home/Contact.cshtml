@model ReaLearn_Core.Models.ContactFormModel
@using Microsoft.AspNetCore.Identity

<link rel="stylesheet" href="~/css/Custom_CSS/Contact.css" />
<body>
    <div class="container-fluid ">
        <div class="row">
            <div class="col-10 offset-2">
                <div id="contact-card" class="card bg-light">
                    <div class="well well-sm">
                        <form asp-action="OnPost" asp-controller="Home" class="form-horizontal" method="post">
                            <fieldset>
                                <legend class="text-center header">Contact us</legend>

                                <div class="form-group">
                                    <div class="btn-toolbar">
                                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                        <div class="col-md-10">
                                            <input asp-for="Name" id="fname" name="name" type="text" placeholder="First Name" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="btn-toolbar">
                                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                                        <div class="col-md-10">
                                            <input id="lname" name="name" type="text" placeholder="Last Name" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="btn-toolbar">
                                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                                        <div class="col-md-10">
                                            <input asp-for="Email" id="email" name="email" type="text" placeholder="Email Address" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="btn-toolbar">
                                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                                        <div class="col-md-10">
                                            <input id="phone" name="phone" type="text" placeholder="Phone" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="btn-toolbar">
                                        <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                                        <div class="col-md-10">
                                            <textarea asp-for="Message" class="form-control" id="message" name="message" placeholder="Enter your massage for us here. We will get back to you soon." rows="7"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="btn-toolbar">
                                        <div class="col-md-12 text-center">
                                            <button type="submit" id="submit-btn" class="btn btn-primary btn-lg">Submit</button>
                                            <img id="submit-success" src="" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $('#submit-btn').click(function () {
        this.attr('disabled', 'disabled');
        $('#submit-btn').attr("src", "~/images/svg/check.svg");
    });
</script>