@model ReaLearn_Core.Models.ViewModels.UpdateAccountDetailsViewModel
@{
    ViewData["Title"] = "Account";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6 col-xl-6 offset-4">
            <div class="card registration-card">
                <div class="card-header">
                    <h3 class="card-header text-xs-center">@Model.FirstName @Model.LastName's account settings</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()


                        <section>
                            <form asp-action="Index" asp-controller="Account" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FirstName"></label>
                                            <input type="text" asp-for="FirstName" class="form-control form-control-sm" autocomplete="off"/>
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LastName"></label>
                                            <input type="text" asp-for="LastName" class="form-control form-control-sm" autocomplete="off"/>
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="UserName"></label>
                                            <input asp-for="UserName" class="form-control form-control-sm" autocomplete="off"/>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email"></label>
                                            <input type="email" asp-for="Email" class="form-control form-control-sm" autocomplete="off"/>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control  form-control-sm" autocomplete="off"/>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                            </form>

                        </section>

                    }

                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js" crossorigin="anonymous"></script>
